+#ifndef ANDROID_INCLUDE_IMX_CONFIG_WM8904_H
+#define ANDROID_INCLUDE_IMX_CONFIG_WM8904_H
+
+#include "audio_hardware.h"
+
+#define MIXER_WM8904_CAPTURE_INPUT_ADC	         0 /* for LINE IN input */
+#define MIXER_WM8904_CAPTURE_INPUT_DMIC	         1 /* for DMIC input */
+#define MIXER_WM8904_CAPTURE_INPUT_DEFAULT	     MIXER_WM8904_CAPTURE_INPUT_DMIC
+
+#define MIXER_WM8904_CAPTURE_VOLUME              "Capture Volume"
+#define MIXER_WM8904_CAPTURE_SWITCH              "Capture Switch"
+#define MIXER_WM8904_CAPTURE_INPUT               "Capture Input"
+#define MIXER_WM8904_LEFT_CAPTURE_INVERTING_MUX  "Left Capture Inverting Mux"
+#define MIXER_WM8904_RIGHT_CAPTURE_INVERTING_MUX "Right Capture Inverting Mux"
+
+static struct route_setting defaults_wm8904[] = {
+    {
+        .ctl_name = MIXER_WM8904_CAPTURE_VOLUME,
+        .intval = 24,
+    },
+    {
+        .ctl_name = MIXER_WM8904_CAPTURE_SWITCH,
+        .intval = 1,
+    },
+    {
+        .ctl_name = MIXER_WM8904_CAPTURE_INPUT,
+        .intval = MIXER_WM8904_CAPTURE_INPUT_DEFAULT,
+    },
+    {
+        .ctl_name = MIXER_WM8904_LEFT_CAPTURE_INVERTING_MUX,
+        .intval = 1,
+    },
+    {
+        .ctl_name = MIXER_WM8904_RIGHT_CAPTURE_INVERTING_MUX,
+        .intval = 1,
+    },
+    {
+        .ctl_name = NULL,
+    },
+};
+
+/* ALSA cards for IMX, these must be defined according different board / kernel config*/
+static struct audio_card  wm8904_card = {
+    .name = "wm8904-audio",
+    .driver_name = "imx-wm8904",
+    .supported_out_devices = (AUDIO_DEVICE_OUT_EARPIECE |
+            AUDIO_DEVICE_OUT_SPEAKER |
+            AUDIO_DEVICE_OUT_WIRED_HEADSET |
+            AUDIO_DEVICE_OUT_WIRED_HEADPHONE |
+            AUDIO_DEVICE_OUT_ANLG_DOCK_HEADSET |
+            AUDIO_DEVICE_OUT_ALL_SCO |
+			AUDIO_DEVICE_OUT_AUX_DIGITAL |
+            AUDIO_DEVICE_OUT_DEFAULT ),
+    .supported_in_devices = (
+            AUDIO_DEVICE_IN_COMMUNICATION |
+            AUDIO_DEVICE_IN_AMBIENT |
+            AUDIO_DEVICE_IN_BUILTIN_MIC |
+            AUDIO_DEVICE_IN_WIRED_HEADSET |
+            AUDIO_DEVICE_IN_BACK_MIC |
+            AUDIO_DEVICE_IN_ALL_SCO |
+			AUDIO_DEVICE_IN_AUX_DIGITAL |
+            AUDIO_DEVICE_IN_DEFAULT),
+    .defaults            = defaults_wm8904,
+    .bt_output           = NULL,
+    .speaker_output      = NULL,
+    .hs_output           = NULL,
+    .earpiece_output     = NULL,
+    .vx_hs_mic_input     = NULL,
+    .mm_main_mic_input   = NULL,
+    .vx_main_mic_input   = NULL,
+    .mm_hs_mic_input     = NULL,
+    .vx_bt_mic_input     = NULL,
+    .mm_bt_mic_input     = NULL,
+    .card                = 0,
+    .out_rate            = 0,
+    .out_channels        = 0,
+    .out_format          = 0,
+    .in_rate             = 0,
+    .in_channels         = 0,
+    .in_format           = 0,
+};
+
+#endif  /* ANDROID_INCLUDE_IMX_CONFIG_WM8904_H */
